source "http://rubygems.org"
source "http://gems.rubyforge.org"
source "http://gemcutter.org"

#Libraries for Filewatching
gem 'rb-inotify', '~> 0.8.8', :require => false
gem 'rb-fsevent', :require => false
gem 'rb-fchange', :require => false

#Mac Library for notification
gem 'growl' 

#Libraries for Watching and remote push
gem 'guard'
gem 'guard-remote-sync'

#Reloads webpage of filechange.
gem "guard-livereload"
#compile sass on file change
gem 'compass'
gem 'guard-compass'
# gem 'install compass-csslint'

#Lint JS file on change.
gem 'guard-jshint-node'
gem 'rb-readline'
